#Pc
	table
		tr(ng-repeat="stat in model.stats | toStatArray")
			td {{stat.displayName}}:
			td
				input(type="number" min=8 max="99" ng-model="stat.base" ng-change="saveStats()")

	angucomplete-alt#AddToInventory(
		local-data="allItems"
		selected-object="addNewItem"
		title-field="name"
		search-fields="name"
		clear-selected=true
		placeholder="Add item..."
		minlength=1
	)

	angucomplete-alt#AddArmorSet(
		local-data="armorSets"
		selected-object="addArmorSet"
		title-field="name"
		search-fields="name"
		clear-selected="true"
		placeholder="Add armor set..."
		minlength=1
	)

	button(ng-click="export()") Export (JSON)


	// Grid
	div(ui-grid-auto-resize ui-grid="gridOptions")

	// Grid action buttons
	script(id="GridRowHeader.html" type="text/ng-template")
		button(ng-click="grid.appScope.add(row.entity)")
			| +

		button(
			ng-click="grid.appScope.upgrade(row.entity)"
			title="Upgrade"
			ng-disabled="!grid.appScope.canUpgrade(row.entity)"
			) ⇈

		button(ng-click="grid.appScope.remove(row.entity)")
			| −